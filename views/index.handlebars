<h1>Bugs!</h1>

<h2>Bugs on the menu!</h2>

<ul>
  {{#each bugs}}
    {{#unless this.devoured}}
      <li>
        {{this.name}}

        <form action="/{{this.id}}?_method=PUT" method="POST">
          <input type="hidden" name="devoured" value="true">
          <button type="submit">YUM</button>
        </form>

        {{> bug/delete-bug}}
      </li>
    {{/unless}}
  {{/each}}
</ul>

<h2>Bugs in your belly!</h2>

<ul>
  {{#each bugs}}
    {{#if this.devoured}}
      <li>
        {{this.name}}

        <form action="/{{this.id}}?_method=PUT" method="POST">
          <input type="hidden" name="devoured" value="false">
          <button type="submit">DEVOUR</button>
        </form>

        {{> bug/delete-bug}}
      </li>
    {{/if}}
  {{/each}}
</ul>

<h2>Add a Bug</h2>
<form class="create-update-form" action="/" method="POST">

  <div class="form-group">
    <label for="ca">Bug Name:</label>
    <input type="text" id="ca" name="name">
  </div>

 

  <button type="submit">Add Bug</button>
</form>
